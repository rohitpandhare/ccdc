<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - DoctorSync</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
</head>
<body class="bg-gray-100 min-h-screen flex">
    <!-- Sidebar -->
    <div class="w-64 bg-white shadow-md">
        <div class="p-6 border-b">
            <h2 class="text-2xl font-bold text-gray-800">Admin Panel</h2>
        </div>
        <nav class="p-4">
            <ul class="space-y-2">
                <li>
                    <a href="#" class="flex items-center text-gray-700 hover:bg-blue-50 p-2 rounded">
                        <i data-feather="users" class="mr-3"></i>
                        User Management
                    </a>
                </li>
                <li>
                    <a href="#" class="flex items-center text-gray-700 hover:bg-blue-50 p-2 rounded">
                        <i data-feather="activity" class="mr-3"></i>
                        System Logs
                    </a>
                </li>
                <li>
                    <a href="#" class="flex items-center text-gray-700 hover:bg-blue-50 p-2 rounded">
                        <i data-feather="settings" class="mr-3"></i>
                        Configuration
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="flex-1 p-10">
        <header class="flex justify-between items-center mb-10">
            <h1 class="text-3xl font-bold text-gray-800">Dashboard</h1>
            <div class="flex items-center">
                <span class="mr-4 text-gray-600">Welcome, <%= user.Username %></span>
                <a href="/auth/logout" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600">
                    Logout
                </a>
            </div>
        </header>

        <div class="grid grid-cols-3 gap-6">
            <div class="bg-white p-6 rounded-lg shadow">
                <h3 class="text-xl font-semibold mb-4">Total Users</h3>
                <p class="text-3xl font-bold text-blue-600"><%= userList.length %></p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow">
                <h3 class="text-xl font-semibold mb-4">Doctors</h3>
                <p class="text-3xl font-bold text-green-600">
                    <%= userList.filter(user => user.Role === 'DOCTOR').length %>
                </p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow">
                <h3 class="text-xl font-semibold mb-4">Patients</h3>
                <p class="text-3xl font-bold text-yellow-600">
                    <%= userList.filter(user => user.Role === 'PATIENT').length %>
                </p>
            </div>
            
        </div>
        

        <!-- Add this after your existing grid cards in admin.ejs -->
<div class="mt-8">
    <div class="bg-white p-6 rounded-lg shadow">
        <h3 class="text-xl font-semibold mb-4">Registered Users</h3>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead>
                    <tr class="bg-gray-50">
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Username</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Role</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Created At</th>
                    </tr>
                </thead>
                <tbody>
                    <% userList.forEach(function(userData) { %>
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap"><%= userData.Username %></td>
                            <td class="px-6 py-4 whitespace-nowrap"><%= userData.Email %></td>
                            <td class="px-6 py-4 whitespace-nowrap"><%= userData.Role %></td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <%= new Date(userData.CreatedAt).toDateString() %>
                            </td>
                            
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>

    </div>

    <script>
        feather.replace();
    </script>
</body>
</html>
