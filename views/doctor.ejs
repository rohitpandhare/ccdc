<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctor Dashboard - DoctorSync</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
</head>
<body class="bg-gray-100 min-h-screen flex">
    <!-- Sidebar -->
    <div class="w-64 bg-white shadow-md">
        <div class="p-6 border-b">
            <h2 class="text-2xl font-bold text-gray-800">Doctor Portal</h2>
        </div>
        <nav class="p-4">
            <ul class="space-y-2">
                <li>
                    <a href="#" class="flex items-center text-gray-700 hover:bg-blue-50 p-2 rounded">
                        <i data-feather="calendar" class="mr-3"></i>
                        My Appointments
                    </a>
                </li>
                <li>
                    <a href="#" class="flex items-center text-gray-700 hover:bg-blue-50 p-2 rounded">
                        <i data-feather="file-text" class="mr-3"></i>
                        Patient Records
                    </a>
                </li>
                <li>
                    <a href="#" class="flex items-center text-gray-700 hover:bg-blue-50 p-2 rounded">
                        <i data-feather="message-square" class="mr-3"></i>
                        Consultations
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="flex-1 p-10">
        <header class="flex justify-between items-center mb-10">
            <h1 class="text-3xl font-bold text-gray-800">Dashboard</h1>
            <div class="flex items-center">
                <span class="mr-4 text-gray-600">Dr. <%= user.Username %></span>
                <a href="/auth/logout" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600">
                    Logout
                </a>
            </div>
        </header>

        <div class="grid grid-cols-3 gap-6">
            <div class="bg-white p-6 rounded-lg shadow">
                <h3 class="text-xl font-semibold mb-4">Total Patients</h3>
                <p class="text-3xl font-bold text-blue-600">42</p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow">
                <h3 class="text-xl font-semibold mb-4">Upcoming Appointments</h3>
                <p class="text-3xl font-bold text-green-600">8</p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow">
                <h3 class="text-xl font-semibold mb-4">Prescriptions</h3>
                <p class="text-3xl font-bold text-yellow-600">15</p>
            </div>
        </div>

        <!-- Recent Appointments -->
        <div class="mt-10 bg-white p-6 rounded-lg shadow">
            <h3 class="text-xl font-semibold mb-4">Recent Appointments</h3>
            <table class="w-full text-left">
                <thead>
                    <tr class="bg-gray-100">
                        <th class="p-3">Patient</th>
                        <th class="p-3">Date</th>
                        <th class="p-3">Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="border-b">
                        <td class="p-3">John Doe</td>
                        <td class="p-3">2024-03-20</td>
                        <td class="p-3">
                            <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full">Completed</span>
                        </td>
                    </tr>
                    <!-- More rows can be dynamically added -->
                </tbody>
            </table>
        </div>
    </div>

    <script>
        feather.replace();
    </script>
</body>
</html>
